{
	"info": {
		"name": "Spring Security JWT - API Tests",
		"description": "Collection para probar autenticación y autorización con JWT",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register User",
